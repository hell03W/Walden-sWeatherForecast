.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.container{
    background-color: lightgray;
}

/*标题, 城市*/
.titleview{
    width: 100%;
    height: 80px;
    color: white;
}
.titleview .title{
    display: block;
    text-align: center;
    font-size: 28px;
    line-height: 50px;
}
.titleview .details{
    display: block;
    text-align: center;
    font-size: 20px;
}

/*展示今天一天不同时段的天气情况*/
.today-list{
    background-color: lightgray;
    width: 100%;
    
}
.today-list-item{
  height: 150rpx;
  width: 75rpx;
  float: left;
  margin: 10rpx 10rpx;
  font-size: 25rpx;
}
.today-list-item text{
    text-align: center;
    line-height: 45rpx;
    color: white;
    display: block;
    width: 100%;
    height: 45rpx;
}
.today-list-item image{
    width: 100%;
    height: 40%;
}


/*展示未来几天基本的天气情况*/
.future-list{
    width: 100%;
    margin-top: 10px;
    padding: 10px 0px;
    color: white;
}
.future-list .item{
    width: 100%;
    height: 40px;
    font-size: 15px;
    float: left;
    display: block;
}
.future-list image{
    width: 30%;
    height: 40px;
}
.future-list text{
    width: 35%;
    height: 40px;
    line-height: 40px;
}
.future-list .front{
    float: left;
}
.future-list .bihind{
    float: right;
    text-align: right;
}

/*今天天气的基本介绍*/
.intro{
    background-color: lightgrey;
    width: 100%;
    height: auto;
    text-align: left;
    color: white;
    padding:15px 0px;
}
.intro text{
    color: white;
    font-size: 15px;
    display: block;
    line-height: 20px;
    padding: 5px 0px;
}



/*天气详情信息*/
.weather-details{
    width: 100%;
    height: auto;
    padding: 15px 0px;
}
.weather-details .weather-item .first{
    width: 50%;
    height: auto;
    float: left;
    text-align: right;
    line-height: 30px;
} 
.weather-details .weather-item .second{
    width: 50%;
    float: left;
    line-height: 30px;
}
.weather-item{
    color: white;
}


















